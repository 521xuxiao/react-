#login{
  height: 100%;
  .login{
    height: 100%;
    .login_left{
      height: 100%;
      float: left;
      width: 50%;
      background: url(../../common/img/shan.png) no-repeat 0 0;
      background-size: 100% 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      .img1{
        width: 60%;
      }
    }
    .login_right{
      float: left;
      height: 100%;
      width: 50%;
      .inner_login_right{
        width: 40%;
        margin: 30% auto 0;
        .p1{
          color: #3073FE;
          font-size: 18px;
          text-align: center;
        }
        .div1{
          margin-top: 30px;
        }
        .div2{
          display: flex;
          .innerDiv{
            flex: 1;
            .input3{
              width: 80%;
            }
          }
          .span3{
            display: block;
            height: 40px;
            background: #D9D9D9;
            color: #3073FE;
            line-height: 40px;
            padding: 0 20px;
            border-radius: 6px;
            font-size: 20px;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            cursor: pointer;
          }
        }
        .logins{
          outline: 0;
          border: 0;
          -webkit-user-select: none;
          -moz-user-select: none;
          -ms-user-select: none;
          user-select: none;
          cursor: pointer;
          width: 100%;
          margin-top: 50px;
          height: 40px;
          background: -moz-linear-gradient(top, #3073FE 0%, #575FFF 100%);
          background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#3073FE), color-stop(100%,#575FFF));
          background: -webkit-linear-gradient(top, #3073FE 0%,#575FFF 100%);
          background: -o-linear-gradient(top, #3073FE 0%,#575FFF 100%);
          background: -ms-linear-gradient(top, #3073FE 0%,#575FFF 100%);
          background: linear-gradient(to bottom, #3073FE 0%,#575FFF 100%);
          color: #fff;
        }
      }
    }
  }
}
